@model PTE.Models.Exam

<h2> Enter Exams Here </h2>
<section class="col-xs-12">
    <form asp-action="Create" asp-controller="Exams"  class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-sm-2 control-label">Exam Title</label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" type="text" id="examTitle" placeholder="Exam Title">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="col-sm-2 control-label">Exam Duration</label>
            <div class="col-sm-10">
                <input asp-for="Duration" class="form-control" type="text" id="examDuration" placeholder="Exam Duration">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input type="submit" class="btn btn-default" value="submit">
            </div>
        </div>
    </form>
</section>