@model PTE.Models.Speaking.RetellLecture

@{
    ViewBag.Title = "Retell Lecture";
    Layout = "_Layout_Exam";

}

@section scripts
    {
    <script src="https://cdn.rawgit.com/mattdiamond/Recorderjs/08e7abd9/dist/recorder.js"></script>
    <script src="~/js/retelllecture.js"></script>
    <script src="~/js/hark.js"></script>

    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.js"></script>
    <script src="~/js/pips.js"></script>

    <!-- plus a jQuery UI theme, here I use "flick" -->

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.4/themes/flick/jquery-ui.css">
    <link rel="stylesheet" href="~/css/pips.css" />
}
<input type="hidden" id="typeId" name="typeId" value="retell_lecture">
<input type="hidden" id="questionDuration" name="questionDuration" value=@Model.QuestionDuration>
<div class="panel panel-default" id="retell_lecture">
    <div class="panel-heading"><h3>Speaking - Retell Lecture</h3></div>

    <div class="panel-body">
        <div class="row verticle_center">
            <audio id="myAudio">
                @{
                    var audioSource = "/Questions/" + Model.ExamId + "/Speaking/retell_lecture/" + Model.RetellLectureId + ".mp3";
                    //var audioSource = "/" + Model.RepeatSentenceId + ".mp3";
                }
                <source src=@audioSource type="audio/mp3">
                @*<source src= type="audio/mp3">*@

                Your browser does not support the audio element.
            </audio>

            <div class="col-xs-7">
                @{
                    var imageSource = "/Questions/" + Model.ExamId + "/Speaking/retell_lecture/" + Model.RetellLectureId + ".png";
                    //var audioSource = "/" + Model.RepeatSentenceId + ".mp3";
                }
                <img src="@imageSource" class="img-responsive">
            </div>
            <div class="col-xs-5">
                <div class="row">
                    <div class="col-xs-1"></div>
                    <div class="col-xs-10 panel panel-default">
                        <div class="panel-body">
                            <p id="countdown_question">Status : </p>
                            <br />
                            <div class="row">
                                <div class="col-xs-3">
                                    <p> Volume: </p>
                                </div>
                                <div class="col-xs-9">
                                    <div class="slider">

                                    </div>
                                </div>
                            </div>

                            <br />


                            <div class="progress">
                                <div class="progress-bar" id="progressBarQuestion" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                                    <span class="sr-only">0% Complete</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-1"></div>
                </div>

                <div class="row">
                    <div class="col-xs-1"></div>
                    <div class="col-xs-10 panel panel-default">
                        <div class="panel-body">
                            <p class="text-center"><strong>Recorded Answer</strong></p>

                            <br>
                            <p>Current Status : </p>
                            <p id="countdown_answer"></p>


                            <div class="progress">
                                <div class="progress-bar" id="progressBarAnswer" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                                    <span class="sr-only">0% Complete</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-1"></div>
                </div>

            </div>
            <br />



            @*<a href="@Url.Action("AnswerReadAloud", "Speaking", new {examId = Model.ExamId, readAloudId = Model.ReadAloudId })" class="btn btn-info pull-right" role="button">Next</a>*@


        </div>
        <a id="retell_l_next" class="btn btn-info pull-right" role="button">Next</a>
    </div>
</div>


